<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.bts_sio.promask.FullscreenActivity"
    android:id="@+id/fullscreen_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0099cc" >

    <SeekBar
        android:id="@+id/writeA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="70dp" />
    
    <SeekBar
        android:id="@+id/writeB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/writeA"
        android:layout_alignBottom="@id/writeA" />

    <SeekBar
        android:id="@+id/writeC"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp" />

    <SeekBar
        android:id="@+id/writeD"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/writeC"
        android:layout_alignBottom="@id/writeC" />
    
</RelativeLayout>